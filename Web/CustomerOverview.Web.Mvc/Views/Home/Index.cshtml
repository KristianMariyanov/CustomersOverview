@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.svg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Small demo project created by Kristian Mariyanov for Fourth Ltd.
                    <a class="btn btn-default" href="https://github.com/KristianMariyanov">
                        Other Projects
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Used Technologies</h2>
        <ul>
            <li>C# 7.1</li>
            <li>ASP.NET Core</li>
            <li>Entity Framework Core</li>
            <li>MSSQL Server</li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Steps to run</h2>
        <ul>
            <li>Setup the connection string in `appsettings.json`</li>
            <li>Start `CustomerOverview.Web.Api` project</li>
            <li>Start `CustomerOverview.Web.MVC` project</li>
            <li>Enjoy</li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Tests</h2>
        <ul>
            <li>Tests are written using xunit</li>
            <li>To Run the test you can use build in test explorer</li>
            <li>All Tests are located in `CustomerOverview.Tests.Web`</li>
        </ul>
    </div>
</div>
